{
  "name": "@smartwait/api",
  "version": "1.0.0",
  "description": "SmartWait API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "npx prisma migrate deploy",
    "db:seed": "npx prisma db seed",
    "db:setup": "ts-node scripts/setup-db.ts",
    "db:setup:test": "NODE_ENV=test ts-node scripts/setup-db.ts --environment=test --skip-seed",
    "db:reset": "npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "test:db": "npm run db:setup:test && npm test"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "twilio": "^4.14.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "@prisma/client": "^5.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/pg": "^8.10.2",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.4.5",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.3",
    "ts-jest": "^29.1.1",
    "prisma": "^5.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}