{
  "name": "@smartwait/api",
  "version": "1.0.0",
  "description": "SmartWait API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc -p ./tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "npx prisma migrate deploy",
    "db:seed": "npx prisma db seed",
    "db:setup": "ts-node scripts/setup-db.ts",
    "db:setup:test": "NODE_ENV=test ts-node scripts/setup-db.ts --environment=test --skip-seed",
    "services:setup": "ts-node scripts/setup-services.ts",
    "services:setup:test": "NODE_ENV=test ts-node scripts/setup-services.ts --environment=test --skip-seed",
    "test:health": "ts-node scripts/test-health.ts",
    "test:twilio": "ts-node src/scripts/test-twilio-integration.ts",
    "db:reset": "npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "db:verify": "ts-node scripts/verify-db-setup.ts",
    "test:db": "npm run db:setup:test && npm test"
  },
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "twilio": "^4.14.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.10.2",
    "@types/socket.io-client": "^3.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.2",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prisma": "^5.3.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
