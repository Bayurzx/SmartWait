# SmartWait MVP Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://smartwait_user:smartwait_password@localhost:5432/smartwait
DATABASE_URL_TEST=postgresql://smartwait_user:smartwait_password@localhost:5432/smartwait_test

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=8h

# ===========================================
# Twilio SMS Configuration
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
API_PORT=3001
WEB_PORT=3000

# ===========================================
# Web Application Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ===========================================
# Mobile App Configuration (for Expo)
# ===========================================
EXPO_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_WS_URL=ws://localhost:3001

# ===========================================
# Staff Authentication
# ===========================================
STAFF_DEFAULT_USERNAME=admin
STAFF_DEFAULT_PASSWORD=change-this-password

# ===========================================
# Development Configuration
# ===========================================
LOG_LEVEL=debug
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# ===========================================
# Docker Configuration
# ===========================================
POSTGRES_DB=smartwait
POSTGRES_USER=smartwait_user
POSTGRES_PASSWORD=smartwait_password

# ===========================================
# Legacy/Future Integration Variables
# ===========================================
EHR_CLIENT_ID=your_ehr_client_id
EHR_CLIENT_SECRET=your_ehr_client_secret
FROM_EMAIL=noreply@smartwait.com
WEBSOCKET_URL=ws://localhost:3001
REACT_APP_WEBSOCKET_URL=ws://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006
TEST_DATABASE_URL=postgresql://smartwait_user:smartwait_password@localhost:5432/smartwait_test